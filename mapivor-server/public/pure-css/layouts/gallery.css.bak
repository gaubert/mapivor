#right-menu {
    /*text-align: right;*/
    float: right;
    border: 5px solid black;
}

/* sub menu link */
.pure-menu-children .pure-menu-link{
    color: #153166;
    font-size: 100%;
    font-weight: normal;
    padding: 0.5em 1em;
}

/* menu heading */
.pure-menu-link {
    color: #153166;
    font-size: 100%;
    font-weight: bold;
    max-height: 20px;
    padding: 0em 0.5em;
    margin: 0;
}

.pure-menu-heading {
    color: #153166;
    font-size: 100%;
    font-weight: bold;
}

.l-box {
    padding: 2em;
}

.header {
     max-height: 40px;
}

.header .pure-menu {
    border-bottom-color: black;
    border-bottom-width: 15px; 
    border-radius: 0;
}

